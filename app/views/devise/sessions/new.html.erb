<h2 class="fixtitle"><%= t(:Log_intx) %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group backcol">
  <div class="field">
    <%= f.label t(:Email_tx), class: 'colwhite' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', :required=>true %>
  </div>

  <div class="field">
    <%= f.label t(:Pass_tx), class: 'colwhite' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', :required=>true %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t(:Rem_tx), class: 'colwhite' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t(:Log_inbt), class: 'btn btn-outline-light' %>
  </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>



